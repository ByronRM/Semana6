<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Semana5.Registro" NavigationPage.HasNavigationBar="False" >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de registro "></Label>
            <Entry x:Name="txtId" Placeholder="codigo" Keyboard="Numeric"></Entry>
            <Entry x:Name="txtNombre" Placeholder="nombre" ></Entry>
             <Entry x:Name="txtApellido" Placeholder="apellido" ></Entry>
             <Entry x:Name="txtEdad" Placeholder="edad" Keyboard="Numeric"></Entry>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
              
                </Grid.ColumnDefinitions>
                <Button x:Name="btnInsertar" Text="Insertar" Clicked="btnInsertar_Clicked" Grid.Row="0" Grid.Column="0" ></Button>
                 <Button x:Name="btnCancelar" Text="Listar Estudiantes" Clicked="btnCancelar_Clicked" Grid.Row="0"  Grid.Column="1"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

